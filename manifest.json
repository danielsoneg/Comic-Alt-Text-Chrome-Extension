{
  "name": "Comic Alt-Text Decoder Ring",
  "version": "1.0",
  "description": "Reveals Hidden Text on WebComic Sites! Currently works for Dr.McNinja, XKCD",
  "permissions": [
    "http://drmcninja.com/",
    "http://xkcd.com/"
  ],
  "content_scripts": [
    {
        "matches": ["http://xkcd.com/*"],
        "js" : ["xkcd.js"],
        "run_at" : "document_idle",
        "all_frames" : false
    },
    {
        "matches": ["http://drmcninja.com/*"],
        "js" : ["drmcninja.js"],
        "run_at" : "document_idle",
        "all_frames" : false
    }
  ]
}